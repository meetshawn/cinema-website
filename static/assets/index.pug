    script(src="//cdnjs.cloudflare.com/ajax/libs/uikit/2.27.2/js/uikit.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/uikit/2.27.2/js/core/grid.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/uikit/2.27.2/js/components/grid.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/uikit/2.27.2/js/components/slideshow-fx.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/uikit/2.27.2/js/components/slideshow.min.js")
