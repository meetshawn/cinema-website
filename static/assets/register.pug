.uk-width-medium-1-3.uk-container-center.uk-panel.uk-panel-box
  form.uk-form(action="" method="post")
    fieldset
      legend Register
      .uk-form-row
        label(for='email') Email
        br
        input(type='email', name='email')
      .uk-form-row
        label(for='password') Password
        br
        input(type='password', name='password')
      .uk-form-row
        label(for='phone') Phone
        br
        input(type='number', name='phone')
      .uk-form-row
        label(for='address') Address
        br
        input(type='text', name='address')
      .uk-form-row
        label(for='dob') Date of Birth
        br
        input(type="text" name='dob' data-uk-datepicker="{format:'DD/MM/YYYY'}")
      .uk-form-row
        input.uk-button(type='submit', value='Register')
      .uk-form-row
        a(ic-get-from="/signin.html" ic-target="#content") Sign in
